<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.thepintozo.myappgym.ultimosEjerciciosController">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lblTitleRoutineStart"
            android:id="@+id/lblUltimosEjercicios"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            style="@style/styleTittle" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/lblUltimosEjercicios"
            android:layout_margin="5dp">

            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerUltimosEjercicios">

            </android.support.v7.widget.RecyclerView>
            <!--<ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listUltimosEjerciciosRealizados"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/colorIcons" />-->
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/btnRetournMain"
                android:id="@+id/btnVolverAMain"
                android:layout_weight="1"
                android:background="@color/colorDivider"
                style="@style/styleTextButtom"
                android:layout_margin="2dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/btnRoutineStart"
                android:id="@+id/btnComenzarRutina"
                android:background="@color/colorSecondaryText"
                style="@style/styleTextButtom"
                android:layout_weight="1"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>

</LinearLayout>
